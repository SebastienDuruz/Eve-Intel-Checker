<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
	<PublishReadyToRun>true</PublishReadyToRun>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
	<RootNameSpace>EveIntelChecker</RootNameSpace>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="appIcon.ico" />
    <None Remove="notification.wav" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="appIcon.ico">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="notification.wav">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.WebView.Wpf" Version="6.0.486" />
    <PackageReference Include="MudBlazor" Version="6.0.14" />
    <PackageReference Include="sqlite-net-pcl" Version="1.8.116" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\EveIntelCheckerLib\EveIntelCheckerLib.csproj" />
  </ItemGroup>

</Project>
