<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="danger.wav" />
    <None Remove="Data\Export\mapConstellations.json" />
    <None Remove="Data\Export\mapRegions.json" />
    <None Remove="Data\Export\mapSolarSystemJumps.json" />
    <None Remove="Data\Export\mapSolarSystems.json" />
    <None Remove="NetCoreAudio" />
    <None Remove="Assets\" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="danger.wav">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Data\Export\mapConstellations.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Data\Export\mapRegions.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Data\Export\mapSolarSystemJumps.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Data\Export\mapSolarSystems.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="notif.wav">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Hosting.Abstractions" Version="2.2.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.2" />
    <PackageReference Include="System.Windows.Extensions" Version="7.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="NetCoreAudio">
      <HintPath>..\..\CustomPackages\NetCoreAudio.dll</HintPath>
    </Reference>
  </ItemGroup>
</Project>
